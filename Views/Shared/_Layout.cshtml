<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js?ver=3.2.1")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.easing.1.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/animated-menu.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="logindisplay">
            @Html.Partial("_LogOnPartial")
        </div>
        <div id="header">
            <div id="title">
            </div>
            <div id="menucontainer">
                <ul>
                    <li class="purple">
                        <p>
                            @Html.ActionLink("Admin", "Index", "Dashboard", new { area = "SecurityGuard" }, null)</p>
                        <p class="subtext">
                            Legal things</p>
                    </li>
                    <li class="blue">
                        <p>
                            @Html.ActionLink("People", "Index", "Recruiter")</p>
                        <p class="subtext">
                            Send us your stuff!</p>
                    </li>
                    <li class="red">
                        <p>
                            @Html.ActionLink("Requisitions", "Index", "Requisition")</p>
                        <p class="subtext">
                            Get in touch</p>
                    </li>
                    <li class="yellow">
                        <p>
                            @Html.ActionLink("Candidates", "Index", "Candidate")</p>
                        <p class="subtext">
                            More info</p>
                    </li>
                    <li class="green">
                        <p>
                            <a id="linkmenu" href="#">Home</a></p>
                        <p class="subtext">
                            The front page</p>
                    </li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
